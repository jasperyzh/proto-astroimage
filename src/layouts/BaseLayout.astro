---
interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style is:global>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 2rem;
        background-color: #f8fafc;
        color: #334155;
      }
      main {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
      }
      h1, h2, h3 {
        color: #0f172a;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }
      h1 {
        font-size: 2.5rem;
        margin-top: 0;
        border-bottom: 2px solid #e2e8f0;
        padding-bottom: 1rem;
      }
      h2 {
        font-size: 1.875rem;
        color: #1e293b;
      }
      h3 {
        font-size: 1.5rem;
        color: #475569;
      }
      ul {
        list-style: none;
        padding: 0;
      }
      li {
        margin-bottom: 0.75rem;
      }
      a {
        color: #3b82f6;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
      }
      a:hover {
        color: #1d4ed8;
        text-decoration: underline;
      }
      img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin-block: 1rem;
        display: block;
        box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
      }
      hr {
        border: 0;
        border-top: 1px solid #e2e8f0;
        margin-block: 2rem;
      }
      .image-container {
        border: 1px solid #e2e8f0;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        background-color: #f8fafc;
        border-radius: 8px;
      }
      .image-label {
        font-weight: 600;
        color: #475569;
        margin-bottom: 0.75rem;
        display: block;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }
      pre {
        background-color: #1e293b;
        color: #e2e8f0;
        padding: 1rem;
        border-radius: 6px;
        overflow-x: auto;
        font-size: 0.875rem;
        margin: 0.75rem 0;
      }
      code {
        background-color: #f1f5f9;
        color: #475569;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.875rem;
      }
      pre code {
        background: none;
        color: inherit;
        padding: 0;
      }
      .nav-container {
        background-color: #1e293b;
        color: white;
        padding: 1rem 2rem;
        margin: -2rem -2rem 2rem -2rem;
        border-radius: 12px 12px 0 0;
      }
      .nav-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1rem;
      }
      .nav-links {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
      }
      .nav-links a {
        color: #cbd5e1;
        font-size: 0.875rem;
        font-weight: 400;
      }
      .nav-links a:hover {
        color: white;
      }
      .back-link {
        background-color: #f1f5f9;
        padding: 0.75rem 1rem;
        border-radius: 6px;
        display: inline-block;
        margin-top: 2rem;
        border: 1px solid #e2e8f0;
      }
      .feature-badge {
        background-color: #dbeafe;
        color: #1e40af;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-left: 0.5rem;
      }
    </style>
  </head>
  <body>
    <main>
      <div class="nav-container">
        <div class="nav-title">üñºÔ∏è Astro Image Playground</div>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/01_local-images">Local Images</a>
          <a href="/02_remote-images">Remote Images</a>
          <a href="/03_markdown">Markdown</a>
          <a href="/04_mdx-component">MDX</a>
          <a href="/05_collections">Collections</a>
          <a href="/06_obsidian-content">Obsidian</a>
        </div>
      </div>
      <h1>{title}</h1>
      <slot />
      <a href="/" class="back-link">‚Üê Back to Home</a>
    </main>
  </body>
</html> 